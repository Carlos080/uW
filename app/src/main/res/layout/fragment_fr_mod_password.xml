<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xr45labs.uworkers.fragments.fr_mod_password">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_pass_actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contrasena:" />

    <EditText
        android:id="@+id/et_pass_actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pass_actual"/>

    <TextView
        android:id="@+id/tv_pass_confirm"
        android:text="Confirme contrasena:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pass_actual"/>

    <EditText
        android:id="@+id/et_pass_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pass_confirm"/>

    <TextView
        android:id="@+id/tv_new_pass"
        android:text="Nueva contrasena:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pass_confirm"/>

    <EditText
        android:id="@+id/et_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_new_pass"/>

    <TextView
        android:id="@+id/tv_new_pass_confirm"
        android:text="Confirme la nueva contrasena:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_new_pass"/>

    <EditText
        android:id="@+id/et_new_pass_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_new_pass_confirm"/>

    <Button
        android:id="@+id/btn_guardar"
        android:text="@string/ico_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_new_pass_confirm"/>

</RelativeLayout>
